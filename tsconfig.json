{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "lib"
    },
    "filesGlob": [
        "src/typings/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "!src/**/*.spec.ts",
        "!src/**/*.spec.tsx"
    ],
    "files": [
        "src/typings/logger.d.ts",
        "src/typings/node.d.ts",
        "src/assign-types.ts",
        "src/index.ts",
        "src/logger.ts",
        "src/parser.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
